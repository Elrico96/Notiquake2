<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notiquake">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">gma
        <activity android:name=".app.activties.NewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.activties.ListEarthquakesActivity" />
        </activity>
        <activity android:name=".app.activties.ReportActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.activties.ListEarthquakesActivity" />
        </activity>
        <activity android:name=".app.activties.EarthquakeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.activties.ListEarthquakesActivity" />
        </activity>
        <activity android:name=".app.activties.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.activties.ListEarthquakesActivity" />
        </activity>
        <activity android:name=".app.activties.ResetPassActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.activties.LoginActivity" />
        </activity>
        <activity
            android:name=".app.activties.ListEarthquakesActivity"
            />
        <activity
            android:name=".app.activties.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activties.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".app.activties.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activties.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>